<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add A New Client</h1>
        <div style="width: 30%; margin: 30px auto;">
            
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Client Name" name="name">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Address" name="address">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Phone Number" name="phone">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Wedding Date" name="date">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Wedding Location" name="wedLocation">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image" name="image">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Package" name="package">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Additions" name="additions">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Package Price" name="price" min="0.01" step="0.01">
                </div>
                        
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back To Clients</a>

        </div>
    </div>
</div>

<%- include("../partials/footer") %>